<VBox alignment="CENTER" prefHeight="470.0" prefWidth="782.0" spacing="20.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fhtw.taskmanagerclient.controller.ManagerPanelController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label alignment="CENTER" prefHeight="50.0" prefWidth="188.0" text="Manager Panel" textAlignment="CENTER">
         <font>
            <Font size="19.0" />
         </font>
      </Label>
      <AnchorPane prefHeight="436.0" prefWidth="580.0">
         <children>
            <Label layoutX="50.0" layoutY="54.0" prefHeight="20.0" prefWidth="126.0" text="Show Tasks from:">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <TableView fx:id="entriesTableView" layoutX="50.0" layoutY="107.0" prefHeight="200.0" prefWidth="631.0">
               <columns>
                  <TableColumn fx:id="employeeNameTableColumn" prefWidth="100.00006866455078" text="Employee" />
                  <TableColumn id="employeeDateColumn" fx:id="employeeDateFromColumn" prefWidth="114.39997863769531" text="Date" />
                  <TableColumn id="employeeTaskColumn" fx:id="employeeTaskColumn" prefWidth="316.00006103515625" text="Task" />
                  <TableColumn id="employeeHoursSpentColumn" fx:id="employeeHoursSpentColumn" minWidth="0.0" prefWidth="100.0" text="Time spent" />
               </columns>
            </TableView>
            <Button fx:id="weeklyViewButton" layoutX="50.0" layoutY="74.0" mnemonicParsing="false" onAction="#onWeeklyViewButtonButtonClick" prefHeight="20.0" prefWidth="126.0" text="This Week" />
            <Button fx:id="monthlyViewButton" layoutX="191.0" layoutY="73.0" mnemonicParsing="false" onAction="#onMonthlyViewButtonButtonClick" prefHeight="20.0" prefWidth="126.0" text="This Month" />
            <Label layoutX="334.0" layoutY="75.0" prefHeight="20.0" prefWidth="86.0" text="Specific date:">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <DatePicker fx:id="dateViewDatePicker" layoutX="428.0" layoutY="72.0" onAction="#onDateViewDatePickerChanged" prefHeight="26.0" prefWidth="126.0" />
            <Button fx:id="updateEntriesButton" layoutX="312.0" layoutY="330.0" mnemonicParsing="false" onAction="#updateEntriesList" prefHeight="38.0" prefWidth="107.0" text="Update Entries" />
            <Button fx:id="updatePasswordButton" layoutX="562.0" layoutY="14.0" mnemonicParsing="false" onAction="#onUpdatePasswordButtonClick" prefHeight="26.0" prefWidth="118.0" text="Update Password" />
         </children>
      </AnchorPane>
   </children>
</VBox>
